<div class="row">
    <div class="col-md-10 col-md-offset-1 text-center page-header">
        <h1>All Blocmarks<% if policy(Topic).create? %><a><span class='glyphicon glyphicon-plus pull-right' id="add-icon" title="Add Topic"></span></a><% end %></h1>
    </div>
    <div class="col-md-10 col-md-offset-1" id="topic-list">
        <div id="topic-form">
            <%= render 'form', topic: Topic.new %>
        </div>
        <% @topics.each do |topic| %>
            <div class="panel panel-default" id=<%="#{topic.id}-panel" %>>
                <%= render topic %>
                <div class="panel-body">
                    <%= render partial: "bookmarks/bookmark", collection: topic.bookmarks %>
                </div>
            </div>
        <% end %>
    </div>
</div>



<script async src="//cdn.embedly.com/widgets/platform.js" charset="UTF-8"></script>