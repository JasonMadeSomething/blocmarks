<%= content_tag :div, class: obj, id: bookmark.id do %>

    <% if obj == "item" %>
        <div class="col-md-3">
    <% end %>
    <a class="embedly-card" data-card-theme="light" data-card-chome="0" data-card-controls="0" href=<%= url_with_protocol(bookmark.url) %>></a>
    <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
    <% if obj == "item" %>
        </div>
    <% end %>
    <% if obj != "item" && policy(bookmark).destroy? %>
        <%= link_to topic_bookmark_path(id: bookmark.id, topic_id: bookmark.topic.id), method: :delete, title: "Delete bookmark", data: {confirm: "Do you want to delete this bookmark?"} do %>
            <i class="glyphicon glyphicon-remove" style="color:red"></i>
        <% end %>
    <% end %>
<% end %>

