<%= content_tag :div, class: "col-md-4", id: bookmark.id do %>
    <a class="embedly-card" data-card-theme="light" data-card-chrome="0" data-card-controls="0" href=<%= url_with_protocol(bookmark.url) %>></a>
    <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
    <% if policy(bookmark).destroy? %>
        <%= link_to [bookmark.topic, bookmark], class: 'btn btn-danger', method: :delete, title: "Delete bookmark", data: {confirm: "Do you want to delete this bookmark?"} do %>
            <i class="glyphicon glyphicon-remove"></i>&nbsp; Delete
        <% end %>
    <% end %>
<% end %>
